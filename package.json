{
  "name": "h-player",
  "version": "1.0.0",
  "description": "H Player â€“ local desktop video player for Movies & TV Shows on plugged-in drives (no network services)",
  "main": "dist/main/main/main.js",
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p src/main/tsconfig.json && electron dist/main/main/main.js",
    "build:renderer": "vite build",
    "build:main": "tsc -p src/main/tsconfig.json",
    "package": "electron-builder",
    "build": "npm run build:renderer && npm run build:main && npm run package",
    "dist": "electron-builder",
    "dist:all": "electron-builder -mwl",
    "pack:manual": "node scripts/manual-pack.js",
    "generate-icons": "node scripts/generate-icons.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "smoke-test": "node scripts/smoke-test.js"
  },
  "keywords": [
    "electron",
    "react",
    "media-player",
    "video",
    "library",
    "cross-platform"
  ],
  "author": "H Player Project",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.18",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.1.1",
    "archiver": "^6.0.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.31",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.3.5",
    "tar": "^6.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "yauzl": "^2.10.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.6"
  },
  "build": {
    "appId": "com.hplayer.desktop",
    "productName": "H Player",
    "directories": {
      "output": "dist-packages"
    },
    "files": [
      "dist/**/*",
      "vendor/**/*",
      "assets/**/*",
      "Run-H-Player.ps1",
      "Run-H-Player.command",
      "run-h-player.sh",
      "scripts/portable/h-player.desktop",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "vendor/",
        "to": "vendor",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets/brand/",
        "to": "assets/brand",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "build/icon.icns",
      "artifactName": "H-Player-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "artifactName": "H-Player-Setup-${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "H Player",
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "category": "AudioVideo",
      "icon": "build/icons",
      "artifactName": "h-player-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "desktop": {
        "Name": "H Player",
        "Comment": "Local desktop media player for Movies & TV Shows",
        "Categories": "AudioVideo;Player;",
        "StartupWMClass": "H Player"
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
