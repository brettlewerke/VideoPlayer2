{
  "name": "hoser-video",
  "version": "6.1.19",
  "description": "Hoser Video â€“ local desktop video player for Movies & TV Shows on plugged-in drives (no network services)",
  "main": "dist/main/main/main.js",
  "scripts": {
    "postinstall": "node scripts/install-ffmpeg.js && node scripts/install-ffprobe.js && node scripts/install-mpv.js",
    "setup": "node scripts/setup.js",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "clean": "node scripts/clean.js",
    "prebuild": "npm run clean",
    "dev": "npm run dev:renderer",
    "dev:full": "concurrently \"npm run dev:renderer\" \"node scripts/dev-main-delayed.js\"",
    "dev:rebuild": "npm run rebuild && npm run dev",
    "dev:renderer": "vite",
    "dev:main": "tsc -p src/main/tsconfig.json && cross-env NODE_ENV=development electron dist/main/main/main.js",
    "dev:electron": "cross-env NODE_ENV=development electron dist/main/main/main.js",
    "dev:play": "node scripts/dev-play.js",
    "build:renderer": "vite build",
    "build:main": "tsc -p src/main/tsconfig.json",
    "package": "electron-builder",
    "build": "npm run build:renderer && npm run build:main && npm run package",
    "build:version": "node scripts/build-version.js",
    "set-version": "node scripts/set-version.js",
    "dist": "electron-builder",
    "dist:all": "electron-builder -mwl",
    "pack:manual": "node scripts/manual-pack.js",
    "generate-icons": "node scripts/generate-icons.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "smoke-test": "node scripts/smoke-test.js",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "commit": "node scripts/commit.js"
  },
  "keywords": [
    "electron",
    "react",
    "media-player",
    "video",
    "library",
    "cross-platform"
  ],
  "author": "Hoser Video Project",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.18",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.1.1",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^27.3.11",
    "electron-builder": "^26.0.12",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "icon-gen": "^5.0.0",
    "jest": "^30.2.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.31",
    "sharp": "^0.34.4",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.3.5",
    "tar": "^6.2.0",
    "to-ico": "^1.1.5",
    "ts-jest": "^29.4.4",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "yauzl": "^2.10.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.6"
  },
  "build": {
    "appId": "com.example.hoservideo",
    "productName": "Hoser Video",
    "directories": {
      "output": "dist-packages"
    },
    "files": [
      "dist/**/*",
      "vendor/**/*",
      "assets/**/*",
      "Run-Hoser-Video.ps1",
      "Run-Hoser-Video.command",
      "run-hoser-video.sh",
      "scripts/portable/hoser-video.desktop",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "vendor/",
        "to": "vendor",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets/brand/",
        "to": "assets/brand",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "build/icon.icns",
      "artifactName": "Hoser-Video-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "artifactName": "Hoser-Video-Setup-${version}.${ext}",
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "category": "AudioVideo",
      "icon": "build/icons",
      "artifactName": "hoser-video-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "desktop": {
        "entry": {
          "Name": "Hoser Video",
          "Comment": "Local desktop media player for Movies & TV Shows",
          "Categories": "AudioVideo;Player;",
          "StartupWMClass": "Hoser Video"
        }
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
