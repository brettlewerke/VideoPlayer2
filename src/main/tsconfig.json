{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "outDir": "../../dist/main",
    "rootDir": "..",
    "noEmit": false,
    "jsx": "preserve",
    "types": ["node", "electron"],
    "baseUrl": "../..",
    "paths": {
      "@common/*": ["src/common/*"],
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["**/*", "../shared/**/*", "../preload/**/*", "../common/**/*"],
  "exclude": [
    "../../node_modules",
    "../../dist",
    "**/__tests__/**",
    "../**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../**/*.test.ts",
    "../**/*.spec.ts"
  ]
}