{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hoser Video Raspberry Pi Configuration",
  "description": "Configuration file for Raspberry Pi kiosk mode and TV remote control",
  
  "kiosk": {
    "enabled": true,
    "fullscreen": true,
    "autostart": true,
    "hideCursor": true,
    "cursorTimeout": 3000
  },
  
  "display": {
    "theme": "dark",
    "fontSize": "large",
    "fontScale": 1.5,
    "uiScale": 1.3,
    "navigation": "remote",
    "highlightColor": "#00A8FF",
    "focusIndicatorSize": "large"
  },
  
  "cec": {
    "enabled": true,
    "turnOnTVOnStart": false,
    "turnOffTVOnExit": false,
    "setActiveSourceOnStart": true,
    "keyRepeatDelay": 500,
    "keyRepeatInterval": 150,
    "deviceType": "playback"
  },
  
  "scanning": {
    "autoScan": true,
    "scanOnMount": true,
    "scanInterval": 300,
    "watchForChanges": true,
    "mountPoints": [
      "/media",
      "/mnt",
      "/home/pi/Videos"
    ]
  },
  
  "player": {
    "hardwareAcceleration": "auto",
    "preferredPlayer": "mpv",
    "mpvOptions": {
      "hwdec": "auto-safe",
      "vo": "gpu",
      "cache": true,
      "cacheSecs": 10,
      "demuxerMaxBytes": "50M",
      "demuxerMaxBackBytes": "20M"
    },
    "autoplay": false,
    "resumePlayback": true,
    "volume": 80
  },
  
  "performance": {
    "enableGPU": true,
    "memoryLimit": "2GB",
    "cpuLimit": 200,
    "preloadPosters": true,
    "maxConcurrentScans": 1,
    "thumbnailQuality": "medium"
  },
  
  "network": {
    "enableNAS": true,
    "nasPaths": [],
    "smbTimeout": 5000,
    "nfsTimeout": 5000
  },
  
  "ui": {
    "language": "en",
    "dateFormat": "MM/DD/YYYY",
    "timeFormat": "12h",
    "showProgress": true,
    "showDuration": true,
    "gridColumns": 4,
    "posterSize": "large"
  },
  
  "advanced": {
    "debugMode": false,
    "logLevel": "info",
    "enableTelemetry": false,
    "crashReporting": false
  }
}
